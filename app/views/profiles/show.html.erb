<div class="row">

  <div class="span6"> <!-- Cerita Wisatawan / Comment -->
    <div class="profiles-home">
      <h2>Cerita Wisatawan</h2>
      <div class="dashed"></div>
      <div class="info-title">Cerita saya tentang tempat wisata yang ada di Sumatera Barat</div>
      <div class="dashed" style="margin-bottom: 25px; margin-top: 0"></div>

      <% @reviews.each do |review| %>
        <div class="span1 photo-tourism">
          <%= link_to image_tag(review.user.image.url(:thumb), :class => 'thumbnail'), profile_path(review.user) %>
        </div>

        <div class="story-tourism">
          <div class="name-location">
            <%= link_to review.commentable.name, tourism_location_path(review.commentable, anchor: "comment-#{review.id}") %>
          </div>
          <div class="clearfix">
            <div class="date-publish pull-right"><i class="icon-time"></i> Rabu, 27 Juni 2012</div>
          </div>

          <div>
            <%= raw truncate(review.comment, :length => 50, :separator => ' ') %>
            <span class="small-view">
              <%= link_to tourism_location_path(review.commentable, anchor: "comment-#{review.id}") do %>
                <i class="icon-external-link"></i>
              <% end %>
            </span>
          </div>
        </div>
        <div class="dashed" style="margin-bottom: 15px; margin-top: 10px;"></div>
      <% end %>

      <div class="all-events" style="margin-bottom: 0">
        <%= link_to 'Arsip', reviews_profile_path(@profile), :class => 'btn btn-primary btn-mini' %>
      </div>
    </div>
  </div> <!-- End Cerita Wisatawan / Comment -->

  <div class="span3">
    <div class="row">

      <div class="span3">
        <div class="profiles-home"> <!-- Cerita Rakyat / Folktale -->
          <h2>Cerita Rakyat</h2>
          <div class="dashed"></div>
          <div class="info-title">Cerita rakyat yang saya buat</div>
          <div class="dashed" style="margin-bottom: 15px; margin-top: 0"></div>

          <% @folktales.each do |folktale| %>
            <div class="title-news">
              <%= link_to truncate(folktale.title, :length => 80, :separator => ' '), folktale_path(folktale) %>
            </div>
            <div class="dashed" style="margin-bottom: 15px; margin-top: 5px;"></div>
          <% end %>

          <div class="all-events" style="margin-bottom: 0">
            <%= link_to 'Arsip', profile_folktales_path(@profile), :class => 'btn btn-primary btn-mini' %>
          </div>
        </div> <!-- End Cerita Rakyat / Folktale -->
      </div>

      <div class="span3">
        <div class="profiles-home"> <!-- Berita Wisatawan / TourismArticle -->
          <h2>Berita Wisata</h2>
          <div class="dashed"></div>
          <div class="info-title">Berita wisata yang yang saya buat</div>
          <div class="dashed" style="margin-bottom: 15px; margin-top: 0"></div>

          <% @tourism_articles.each do |tourism_article| %>
            <div class="title-news">
              <%= link_to truncate(tourism_article.title, :length => 80, :separator => ' '), tourism_article_path(tourism_article) %>
            </div>
            <div class="dashed" style="margin-bottom: 15px; margin-top: 5px;"></div>
          <% end %>

          <div class="all-events" style="margin-bottom: 0">
            <%= link_to 'Arsip', profile_tourism_articles_path(@profile), :class => 'btn btn-primary btn-mini' %>
          </div>
        </div>
      </div> <!-- END Berita Wisatawan / TourismArticle -->

      <div class="span3">
        <div class="profiles-home"> <!-- Tourism Location / Tempat Wisata -->
          <h2>Tempat Wisata</h2>
          <div class="dashed"></div>
          <div class="info-title">Informasi tempat wisata yang saya buat</div>
          <div class="dashed" style="margin-bottom: 15px; margin-top: 0"></div>

          <% @tourism_locations.each do |tourism_location| %>
            <div class="title-news">
              <%= link_to truncate(tourism_location.name, :length => 80, :separator => ' '), tourism_location_path(tourism_location) %>
            </div>
            <div class="dashed" style="margin-bottom: 15px; margin-top: 5px;"></div>
          <% end %>

          <div class="all-events" style="margin-bottom: 0">
            <%= link_to 'Arsip', profile_tourism_locations_path(@profile), :class => 'btn btn-primary btn-mini' %>
          </div>
        </div> <!-- End Tourism Location / Tempat Wisata -->
      </div>

      <div class="span3">
        <div class="profiles-home"> <!-- Acara / Event -->
          <h2>Acara Wisata</h2>
          <div class="dashed"></div>
          <div class="info-title">Informasi acara wisata yang saya buat</div>
          <div class="dashed" style="margin-bottom: 15px; margin-top: 0"></div>

          <% @events.each do |event| %>
            <div class="title-news">
              <%= link_to truncate(event.title, :length => 80, :separator => ' '), event_path(event) %>
            </div>
            <div class="dashed" style="margin-bottom: 15px; margin-top: 5px;"></div>
          <% end %>

          <div class="all-events" style="margin-bottom: 0">
            <%= link_to 'Arsip', profile_events_path(@profile), :class => 'btn btn-primary btn-mini' %>
          </div>
        </div> <!-- End Acara / Event -->
      </div>

      <div class="span3">
        <div class="profiles-home"> <!-- Tips & Trick -->
          <h2>Tips & Trik Wisata</h2>
          <div class="dashed"></div>
          <div class="info-title">Tips & Trik wisata yang saya buat</div>
          <div class="dashed" style="margin-bottom: 15px; margin-top: 0"></div>

          <% @tips_tricks.each do |tips_trick| %>
            <div class="title-news">
              <%= link_to truncate(tips_trick.title, :length => 80, :separator => ' '), tips_trick_path(tips_trick) %>
            </div>
            <div class="dashed" style="margin-bottom: 15px; margin-top: 5px;"></div>
          <% end %>

          <div class="all-events" style="margin-bottom: 0">
            <%= link_to 'Arsip', profile_tips_tricks_path(@profile), :class => 'btn btn-primary btn-mini' %>
          </div>
        </div> <!-- Tips & Trik -->
      </div>

    </div>
  </div>

</div>

