<div class="profiles-home">
  <%= f.input :title, :label => 'Judul Berita Wisata', :input_html => {:class => 'span6'} %>
  <%= f.input :content, :as => :text, :label => 'Isi Berita Wisata', :input_html => { :rows => 20, :class => 'span6' } %>
  <%= f.input :image %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
      tourism_articles_profile_path(@profile), :class => 'btn btn-danger delete' %>
  </div>
</div>


