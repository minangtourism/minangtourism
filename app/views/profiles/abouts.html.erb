<div class="container">
  <div class="row">

    <div class="span3">
      <%= render 'user_navigation' %>
    </div>
    <div class="row">
      <div class="span5">
        <div class="row">
          <% if can? :create_tourism_article, @profile %>
            <div class="span5">
              <div class="profiles-home"> <!-- Berita Wisatawan / TourismArticle -->
                <%= link_to edit_about_profile_path(@profile) do %>
                  <div class="btn btn-primary icon-pencil"> Sunting Profile</div>
                <% end %>
              </div>
            </div>
          <% end %>
          <div class="span5">
            <div class="profiles-home">
              <h2>Tentang Saya</h2>
              <div class="dashed"></div>
              <div class="info-title">Informasi tentang saya</div>
              <div class="dashed" style="margin-bottom: 15px; margin-top: 0"></div>
              <div class="about-me" style="white-space: pre-wrap">
                <%= @profile.about %>
              </div>
            </div>
          </div>

          <div class="span5">
            <div class="profiles-home">
              <h2>Info Umum</h2>
              <div class="dashed"></div>
              <div class="info-title">Informasi umum saya</div>
              <div class="dashed" style="margin-bottom: 15px; margin-top: 0"></div>

              <table class="table table-striped">
                <tbody>
                  <tr>
                    <td><i class="icon-bookmark"></i> Nama</td>
                    <td><%= @profile.name %></td>
                  </tr>
                  <tr>
                    <td><i class="icon-user"></i> Saya seorang</td>
                    <td><%= @profile.sex %></td>
                  </tr>
                  <tr>
                    <td><i class="icon-gift"></i> Ulang Tahun</td>
                    <td><%= l @profile.birthday, :format => :long if @profile.birthday.present? %></td>
                  </tr>
                </tbody>
              </table>

            </div>
          </div>
        </div>
      </div>

      <div class="span4">
        <div class="row">

          <div class="span4">
            <div class="profiles-home">
              <h2>Info Kontak</h2>
              <div class="dashed"></div>
              <div class="info-title">Info kontak  saya</div>
              <div class="dashed" style="margin-bottom: 15px; margin-top: 0"></div>

              <table class="table table-striped">
                <tbody>
                  <tr>
                    <td><i class="icon-tags"></i> Email</td>
                    <td><%= @profile.email %></td>
                  </tr>
                  <tr>
                    <td><i class="icon-briefcase"></i> Telepon</td>
                    <td><%= @profile.phone %></td>
                  </tr>
                  <tr>
                    <td><i class="icon-map-marker"></i> Alamat</td>
                    <td><%= @profile.address %></td>
                  </tr>
                  <tr>
                    <td><i class="icon-globe"></i> Kota Asal</td>
                    <td><%= @profile.city %></td>
                  </tr>
                </tbody>
              </table>
            </div>

          </div>

          <div class="span4">
            <div class="profiles-home">
              <h2>Instant Messaging</h2>
              <div class="dashed"></div>
              <div class="info-title">Instant Messaging saya</div>
              <div class="dashed" style="margin-bottom: 15px; margin-top: 0"></div>

              <table class="table table-striped">
                <tbody>
                  <tr>
                    <td><i class="icon-tag"></i> Website</td>
                    <td><%= @profile.website %></td>
                  </tr>
                  <tr>
                    <td><i class="icon-tag"></i> Facebook</td>
                    <td><%= @profile.facebook %></td>
                  </tr>
                  <tr>
                    <td><i class="icon-tag"></i> Twitter</td>
                    <td><%= @profile.twitter %></td>
                  </tr>
                </tbody>
              </table>

            </div>
          </div>
        </div>

      </div>

    </div>
  </div>

</div>