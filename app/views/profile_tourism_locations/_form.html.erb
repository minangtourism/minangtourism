<div class="profiles-home">
  <h2>Tempat Wisata</h2>
  <div class="dashed" style="margin-bottom: 30px; margin-top: 0"></div>

  <%= f.input :name, :label => 'Nama', :input_html => {:class => 'span5'} %>

  <%= f.association :category_loc_tourism, :label => 'Kategori', :collection => nested_set_options(CategoryLocTourism) {|i, level| "#{'-' * level} #{i.name}" } %>

  <%= f.input :address, :label => 'Alamat', :as => :text, :input_html => {:class => 'span7', :rows => 3} %>

  <label>Kota/Kabupaten</label>
  <%= f.select :city, options_for_select([
      "Kabupaten Agam", "Kabupaten Dharmasraya", "Kabupaten Kepulauan Mentawai",
      "Kabupaten Lima Puluh Kota", "Kabupaten Padang Pariaman", "Kabupaten Pasaman",
      "Kabupaten Pasaman Barat", "Kabupaten Pesisir Selatan", "Kabupaten Sijunjung",
      "Kabupaten Solok", "Kabupaten Solok Selatan", "Kabupaten Tanah Datar",
      "Kota Bukittinggi", "Kota Padang", "Kota Padangpanjang",
      "Kota Pariaman", "Kota Payakumbuh", "Kota Sawahlunto",
      "Kota Solok"
    ]) %>

  <%= f.input :zip, :label => 'Kode Pos', :input_html => {:class => 'span5'} %>

  <%= f.input :phone, :label => 'Nomor Telepon', :input_html => {:class => 'span5'} %>

  <%= f.input :web, :label => 'Alamat Website', :input_html => {:class => 'span5'} %>

  <%= f.input :facebook, :label => 'Alamat Facebook', :input_html => {:class => 'span5'} %>

  <%= f.input :twitter, :label => 'Alamat Twitter', :input_html => {:class => 'span5'} %>

  <%= f.input :facility, :label => 'Fasilitas', :as => :text, :input_html => {:class => 'span7', :rows => 3} %>

  <%= f.input :hours_description, :label => 'Jam Buka', :as => :text, :input_html => {:class => 'span7', :rows => 3} %>

  <%= f.input_field :description %>
  <span class="help-block">Deskripsi tempat wisata</span>

  <%= f.input :image, :label => false, :input_html => {:style => 'margin-top: 15px;'} %>
  <span class="help-block">Pilih gambar untuk tempat wisata</span>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
      profile_tourism_locations_path(@profile), :class => 'btn btn-danger delete' %>
  </div>
</div>


