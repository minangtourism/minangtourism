<div class="container">

  <div class="navbar navbar-static" id="navbarExample">
    <div class="navbar-inner">
      <div style="width: auto;" class="container">
        <a href="#" class="brand">Tempat Wisata</a>
        <ul class="nav">
          <li class="dropdown">
            <a data-toggle="dropdown" class="dropdown-toggle" href="#">Wisata Alam <b class="caret"></b></a>
            <ul class="dropdown-menu">
              <% CategoryLocTourism.all.each do |category_loc_tourism| %>
                <li class="<%= current_page?(location_tourisms_path(category_loc_tourism_id: category_loc_tourism.to_param)) ? "active" : nil%>">
                  <%= link_to location_tourisms_path(category_loc_tourism_id: category_loc_tourism.to_param) do %>
                    <%= category_loc_tourism.name %>
                  <% end %>
                </li>
              <% end %>
            </ul>
          </li>
        </ul>
      </div>
    </div>
  </div>

  <ul class="thumbnails">
    <% @location_tourisms.each do |location_tourism| %>
      <li class="span3">
        <div class="thumbnail">
          <div class="title-location clearfix">
            <h3>
              <%= location_tourism.name %>
              <%#= link_to location_tourism.name, location_tourism_path(location_tourism) %>
            </h3>

            <p class="pull-left">
              <i class="icon-star"></i>
              <i class="icon-star"></i>
              <i class="icon-star"></i>
              <i class="icon-star"></i>
              <i class="icon-star-empty"></i>
            </p>
            <p class="pull-right" style="margin-right: 10px;">
              <i class="icon-pencil"></i>
              <%= location_tourism.comments.count %> Cerita Wisatawan
            </p>
          </div>
          <%= image_tag(location_tourism.image.url(:small)) %>
          <div class="caption">
            <div class="clearfix">
              <p><i class="icon-th-list"></i>
                <%= location_tourism.category_loc_tourism.parent.name %>,
                <%= location_tourism.category_loc_tourism.name %>
              </p>
              <p><i class="icon-map-marker"></i> <%= location_tourism.city %></p>
              <p><i class="icon-user"></i>
                <%= link_to location_tourism.user.username, profile_path(location_tourism.user) %>
              </p>
              <span>
                <%= link_to "Selanjutnya Â»", location_tourism_path(location_tourism),
                  :class => 'btn btn-primary pull-right' %>
              </span>
            </div>
          </div>
        </div>
      </li>
    <% end %>
  </ul>
</div>