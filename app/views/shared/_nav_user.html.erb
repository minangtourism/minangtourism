<% if signed_in? %>
  <a class="btn btn-primary dropdown-toggle" data-toggle="dropdown" href="#">
    <i class="icon-user"></i> <%= current_user.email.gsub(/@.+/, '') %>
    <span class="caret"></span>
  </a>
  <ul class="dropdown-menu">
    <li>
        <%= link_to rails_admin_path do %>
          <i class="icon-user"></i> Admin
        <% end if can? :access, :rails_admin %>
        <%= link_to profile_path(current_user) do %>
          <i class="icon-user"></i> My Profile
        <% end if user_signed_in? && can?(:read, current_user) %>
    </li>
    <li class="divider"></li>
    <li>
      <%= link_to destroy_user_session_path, :method => :delete do %>
        <i class="icon-off"></i> Logout
      <% end %>
    </li>
  </ul>
<% else %>
  <a class="btn btn-primary dropdown-toggle" data-toggle="dropdown" href="#">
    <i class="icon-user"></i> Sign in
    <span class="caret"></span>
  </a>
  <ul class="dropdown-menu explogin_drop">
    <li class="explogin_drop_li" style="padding: 10px">
      <div id="form-sign-in-container"><%= render "shared/form_sign_in" %></div>
    </li>
  </ul>
<% end %>