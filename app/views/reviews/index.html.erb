<div class="container">
  <div class="row">
    <div class="span12">
      <h2>Cerita Wisatawan</h2>
      <div class="dashed"></div>
      <div class="info-title">Cerita terbaru wisatawan tentang tempat wisata yang ada di Sumatera Barat</div>
      <div class="dashed" style="margin-bottom: 30px; margin-top: 0"></div>
      <div style="text-align: center">
        <%= paginate @reviews %>
      </div>
      <% @reviews.each do |review| %>
        <div class="row">
          <div class="span12">
            <div class="span2" style="margin-left: 0">
              <div class="pp-tourism">
                <%= link_to image_tag(review.user.image.url(:medium)), profile_path(review.user) %>
              </div>

              <div class="info-story-tourism">
                <span><i class="icon-user"></i>
                  <%= link_to review.user.username, profile_path(review.user) %>
                </span>
                <span><i class="icon-home"></i> Alamat</span>
              </div>

              <div class="link-article">
                <%= link_to 'Link to This Review', location_tourism_path(review.commentable, anchor: "comment-#{review.id}"), :class => 'btn btn-inverse btn-mini' %>
              </div>
            </div>

            <div class="span10">
              <div class="story-tourism">
                <div class="title-location-tourism">
                  <%= link_to review.commentable.name, location_tourism_path(review.commentable, anchor: "comment-#{review.id}") %>
                </div>
                <div style="line-height: 20px; font-size: 14px;">
                  <div><i class="icon-list-alt"></i>
                    <%= review.commentable.category_loc_tourism.parent.name %>,
                    <%= review.commentable.category_loc_tourism.name %>
                  </div>
                  <div><i class="icon-map-marker"></i>
                    <%= review.commentable.city %>
                  </div>
                  <div class="clearfix">
                    <div class="date-publish pull-right">
                      <i class="icon-time"></i>
                      <%= l review.commentable.created_at, :format => :costum %>
                    </div>
                    <div class="rate-location pull-left">
                      <%#*<i class="icon-star"></i>%>
                      <%#*<i class="icon-star"></i>%>
                      <%#*<i class="icon-star"></i>%>
                      <%#*<i class="icon-star"></i>%>
                      <%#*<i class="icon-star-empty"></i>%>
                    </div>
                  </div>
                </div>

                <div>
                  <%= raw review.comment %>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="dashed" style="margin-bottom: 18px; margin-top: 0;"></div>
      <% end %>
      <div style="text-align: center">
        <%= paginate @reviews %>
      </div>
    </div>
  </div>
</div>
