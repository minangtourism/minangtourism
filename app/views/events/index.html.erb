<div class="container">
  <div class="breadcrumb">
    <div class="clearfix">
      <div class="pull-left" style="color: #005580; font-size: 18px; margin-top: 4px;">
        <i class="icon-bullhorn"></i> Acara Wisata
      </div>
    </div>
  </div>
  <div class="row">
    <div class="span12">

      <ul class="thumbnails">
        <li class="span8">
          <%= render "shared/event_1", :events => @events[0..0] || [] %>
        </li>

        <li class="span4">
          <%= render "shared/event_2", :events => @events[1..1] || [] %>
        </li>
      </ul> <!-- Berita Utama -->

      <ul class="thumbnails">
        <%= render "shared/event_3", :events => @events.to_a.from(2) || [] %>

      </ul>

      <%= paginate @events %>
    </div>
  </div>
</div>